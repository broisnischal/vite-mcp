{
  "name": "vite-mcp",
  "version": "0.1.2",
  "description": "MCP server for Vite development, gives your agent actual eyes inside the browser via adapters.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "vite-mcp-env.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js",
      "require": "./dist/adapters/index.cjs"
    },
    "./virtual-mcp": {
      "types": "./dist/virtual-mcp.d.ts"
    },
    "./vite-mcp-env": {
      "types": "./vite-mcp-env.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:mcp": "tsx test-mcp-client.ts",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm install && npm run build && changeset publish"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/node": "^24.3.0",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.0-beta",
    "vite": "^7.2.7"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "keywords": [
    "mcp",
    "vite",
    "browser",
    "development",
    "tools",
    "vite plugin",
    "vite mcp",
    "vite mcp adapters"
  ],
  "author": {
    "name": "Nischal Dahal",
    "email": "info@nischal-dahal.com.np",
    "url": "https://nischal-dahal.com.np"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/broisnischal/vite-mcp"
  },
  "bugs": {
    "url": "https://github.com/broisnischal/vite-mcp/issues"
  },
  "homepage": "https://github.com/broisnischal/vite-mcp",
  "contributors": [
    {
      "name": "broisnees",
      "email": "info@nischal-dahal.com.np",
      "url": "https://nischal-dahal.com.np"
    }
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/broisnischal"
    }
  ]
}